#include <stdio.h>

int main()
{
	float n;
	printf("\nENTER a NUMbER :");
	fflush(stdin);	fflush(stdout);
	scanf("%f",&n);
	if(n > 0)
		printf("\n%f is positive",n);
	else if(n == 0)
		printf("\nyou entered 0");
	else
		printf("\%f is negative",n);
	return 0;
}
